<p id="notice"><%= notice %></p>



<table>
  <thead>
    <tr>
      <th>ツイート</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @twitters.each do |twitter| %>
      <tr>
        <td><%= twitter.content %></td>
        <td><%= link_to '詳細', twitter %></td>
        <td><%= link_to '編集', edit_twitter_path(twitter) %></td>
        <td><%= link_to '削除', twitter, method: :delete, data: { confirm: '本当に削除してよろしいでしょうか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ツイートする', new_twitter_path %>
